                                    @if (CartItem is not null)
                                    {
                                        float Item_total_price = 0;
                                        foreach (var item in CartItem)
                                        {
                                            Item_total_price += float.Parse(item.Price) * (float)item.Quantity;
                                            var itemid = item.Id;
